@page
@model ContactListRazor.Pages.ContactList.CreateModel

<br />
<h2 class="text-info">Add Contact</h2>
<div class="border container" style="padding: 30px">
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Contact.FirstName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Contact.FirstName" class="form-control" />
            </div>
            <span asp-validation-for="Contact.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Contact.MiddleName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Contact.MiddleName" class="form-control" />
            </div>
            <span asp-validation-for="Contact.MiddleName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Contact.LastName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Contact.LastName" class="form-control" />
            </div>
            <span asp-validation-for="Contact.LastName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button value="Create" type="submit" class="btn btn-success form-control">Submit</button>
            </div>
            <div class="col-3">
                <a class="btn btn-info text-white form-control" asp-page="Index">Cancel</a>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



